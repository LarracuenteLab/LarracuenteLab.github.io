}

@article{courret_evolutionary_2023,
	title = {The {Evolutionary} {History} of \textit{{Drosophila} simulans} {Y} {Chromosomes} {Reveals} {Molecular} {Signatures} of {Resistance} to {Sex} {Ratio} {Meiotic} {Drive}},
