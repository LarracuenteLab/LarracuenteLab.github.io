	author = {Hemmer, Lucas W. and Negm, Sherif and Geng, Xuewen and Courret, Cécile and Navarro-Domínguez, Beatriz and Speece, Iain and Wei, Xiaolu and Altidor, Eddyson and Chaffer, James and Sproul, John S. and Larracuente, Amanda M.},
